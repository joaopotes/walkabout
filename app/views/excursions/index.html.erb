<div class= "container">
  <h1> Excursions </h1>
  <div class="d-flex">
    <div class="cards col-md-6">
      <% @excursions.each do |excursion| %>
        <div class="card-excursion">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-excursion-infos">
            <div>
              <h2><%= link_to excursion.name, excursion_path(excursion.id) %></h2>
              <p><%= excursion.description %></p>
            </div>
            <h2 class="card-excursion-pricing">â‚¬<%= excursion.price %></h2>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-excursion-user avatar-bordered" />
          </div>
        </div>
      <% end %>
    </div>
    <div class="map col-md-6">
      <img src="https://www.seekpng.com/png/full/10-103122_world-map-designs-png-world-map-web-design.png" />
    </div>
  </div>
</div>
