<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div class="navbar-logo">
      <%= link_to image_tag("traveler.png",alt: "Traveler" ), '/', class: "navbar-brand" %>
    </div>

    <div class="navbar-title">
      <h1>WALKBOUT</h1>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <% if current_user.role == "Host"%>
                <%= link_to "My excursions", myexcursions_path, class: "dropdown-item" %>
              <% else %>
                <%= link_to "my bookings", mybookings_path, class: "dropdown-item" %>
              <% end %>
              <% link_to "Excursions", excursions_path, class: "dropdown-item"  %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
        <% else %>
          <li class="nav-item active">
            <%= link_to "Login", new_user_session_path, class: "btn btn-login" %>
          </li>
          <li class="nav-item">
            <%= link_to "Join", new_user_registration_path, class: "btn btn-join" %>
          </li>
          <li class="nav-item">
            <i class="fa-solid fa-user"></i>
          </li>
          <% end %>
          <!--li class="nav-item"-->
          <!--/li-->
      </ul>
    </div>
  </div>
</div>
